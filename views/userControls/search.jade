div(class="panel panel-default")
    div(class="panel-body")
        h3 Word Search
        form(role='form' action="/search" method="post" class="form-horizontal")
            div(class='form-group')
                div(class="col-sm-2")
                    select(name="searchType" class="form-control")
                        option(value="startswith") Starts With
                        option(value="endswith") Ends With
                        option(value="contains" selected="1") Contains
                div(class="col-sm-3")
                    input(type='text' class='form-control' name='searchQuery' placeholder='Letters' value="#{word}")
                div(class="col-sm-1")
                    button(class="btn btn-default" type="submit")
                        i(class="glyphicon glyphicon-search")
            div(style='position:relative; left:-20px;')
                include advancedSearch
                include searchHelp